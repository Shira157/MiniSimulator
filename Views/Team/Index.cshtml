@model IEnumerable<MiniSimulator.Models.Team>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Team List</h2>
        </div>

        
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Team Name
                    </th>
                    <th>
                        Strength
                    </th>
                    
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.Strength</td>
                       
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Product to display.</p>
    }

</div>

