
@model MiniSimulator.Models.Team



<form method="post" enctype="multipart/form-data"> <!--This is needed for the images-->
   
    <input asp-for="Id" hidden /> <!--This is used for the update to pass the Id and not just the Name and Order-->
    <div class="boder p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Team</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Strength"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Strength" class="form-control" />
                        <span asp-validation-for="Strength" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Team Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="UploadBox" multiple class="form-control" />
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100"><i class="fa-solid fa-arrow-left-long"></i>&nbsp;Back</a>
                        </div>
                        <div class="col">
                            <input asp-controller="Team" asp-action="Edit" class="btn btn-info w-100" type="submit" value="Update" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 ">

                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }

            </div>
            
        </div>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    } 
}